#edit-user-header.hform.hide

	.header-holder
		.fix-width
			.user-info-holder

				.user-avatar
					.user-photo__img

						.image-preview
							img.image-preview__pic(src="/assets/img/default_avatar.jpg", alt="")

						span.fa.fa-camera
						label.link Изменить фото
							input.form__input.form__input_file(type="file", name="")


				.user-cover
